<% provide(:title, 'Sign up') %>
<div class="signup">
  <h1>Sign up</h1>
  
  <div class="#">
    <div class="form_wrapper">
      <%= form_with(model: @user, local: true) do |f| %>
        <%= render 'shared/error_messages' %>
  
        <%= f.label :name %>
        <%= f.text_field :name, class: "form_parts" %>
  
        <%= f.label :email %>
        <%= f.email_field :email, class: "form_parts" %>
  
        <%= f.label :password %>
        <%= f.password_field :password, class: "form_parts" %>
  
        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation, class: "form_parts" %>
  
        <%= f.submit "Create my account", class: "form_parts create_btn" %>
      <% end %>
    </div>
  </div>
</div>